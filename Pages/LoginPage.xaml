<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BufeApp.Pages.LoginPage"
             Shell.NavBarIsVisible="False"
             Title="LoginPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <x:String x:Key="IconRestaurant">M11,9H9V2H7V9H5V2H3V9C3,11.12 4.66,12.84 6.75,12.97V22H9.25V12.97C11.34,12.84 13,11.12 13,9V2H11V9M16,6V14H18.5V22H21V2C18.24,2 16,4.24 16,6Z</x:String>
            <x:String x:Key="IconBadge">M14,12H10V10H14M14,16H10V14H14M20,8H17.19C16.74,7.22 15.91,6.72 15,6.72C14.09,6.72 13.26,7.22 12.81,8H10V6H14V4H4V22H20V8M9,16H5V14H9V16M9,12H5V10H9V12M9,8H5V6H9V8M15,8C15.55,8 16,8.45 16,9C16,9.55 15.55,10 15,10C14.45,10 14,9.55 14,9C14,8.45 14.45,8 15,8Z</x:String>
            <x:String x:Key="IconVisibilityOff">M11.83,9L15,12.16C15,12.11 15,12.05 15,12A3,3 0 0,0 12,9C11.94,9 11.89,9 11.83,9M7.53,9.8L9.08,11.35C9.03,11.56 9,11.77 9,12A3,3 0 0,0 12,15C12.22,15 12.44,14.97 12.65,14.92L14.2,16.47C13.53,16.8 12.79,17 12,17C9.24,17 7,14.76 7,12C7,11.21 7.2,10.47 7.53,9.8M2,4.27L4.28,6.55L4.73,7C3.08,8.3 1.78,10 1,12C2.73,16.39 7,19.5 12,19.5C13.55,19.5 15.03,19.2 16.38,18.66L16.81,19.08L19.73,22L21,20.73L3.27,3M12,7C14.08,7 15.84,8.25 16.43,10L19.3,12.87C19.93,12.87 19.93,12.87 23,12C21.27,7.61 17,4.5 12,4.5C10.6,4.5 9.26,4.75 8,5.2L10.17,7.35C10.74,7.13 11.35,7 12,7Z</x:String>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid IgnoreSafeArea="True">

        <BoxView Color="{AppThemeBinding Light=#E6f8f7f6, Dark={StaticResource BgDark}}" />

        <ScrollView>
            <VerticalStackLayout Spacing="0" 
                             Padding="24,60,24,24" 
                             VerticalOptions="Center">

                <VerticalStackLayout HorizontalOptions="Center" Spacing="24" Margin="0,0,0,30">
                    <Grid HeightRequest="120" HorizontalOptions="Center">
                        <Border Stroke="{StaticResource Primary}" StrokeThickness="2" Opacity="0.2"
                            HeightRequest="110" WidthRequest="110"
                            StrokeShape="RoundRectangle 55"
                            HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Border BackgroundColor="#1AEE8C2B" StrokeThickness="0"
                            HeightRequest="96" WidthRequest="96"
                            StrokeShape="RoundRectangle 48"
                            HorizontalOptions="Center" VerticalOptions="Center">
                            <Path Data="{StaticResource IconRestaurant}" 
                                Fill="{StaticResource Primary}"
                                Aspect="Uniform"
                                HeightRequest="52" WidthRequest="52"
                                HorizontalOptions="Center" VerticalOptions="Center"/>
                        </Border>
                    </Grid>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Jedlik Büfé"
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                           FontSize="32"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center" />

                        <Label Text="Rendelj bármit a büféből hogy szünetbe ne kelljen kiállni a sort, vagy akár a teremben élvezhesd"
                           TextColor="{AppThemeBinding Light=#897561, Dark=#9CA3AF}"
                           FontSize="16"
                           HorizontalTextAlignment="Center"
                           WidthRequest="280" />
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="20">

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Iskolai E-mail" 
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark=#E5E7EB}"
                           FontSize="14" 
                           FontAttributes="Bold"/>

                        <Border StrokeShape="RoundRectangle 12"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                            HeightRequest="56">
                            <Grid ColumnDefinitions="*" Padding="16,0">
                                <Entry Grid.Column="0"
                                   x:Name="Email_Entry"
                                   Placeholder="nev@jedlik.eu"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                   FontSize="16"
                                   VerticalOptions="Center"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Jelszó" 
                           TextColor="{AppThemeBinding Light={StaticResource Black}, Dark=#E5E7EB}"
                           FontSize="14" 
                           FontAttributes="Bold"/>

                        <Border StrokeShape="RoundRectangle 12"
                            StrokeThickness="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                            HeightRequest="56">
                            <Grid ColumnDefinitions="*" Padding="16,0">
                                <Entry Grid.Column="0"
                                   x:Name="Password_Entry"
                                   IsPassword="True"
                                   Placeholder="Írd be a jelszavad"
                                   PlaceholderColor="#9CA3AF"
                                   TextColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                                   FontSize="16"
                                   VerticalOptions="Center"/>


                            </Grid>
                        </Border>

                        <Grid ColumnDefinitions="Auto, *" Margin="0,4,0,0">

                            <Label Grid.Column="1" 
                               Text="Elfelejtetted a jelszavad?" 
                               FontSize="12" 
                               FontAttributes="Bold"
                               TextColor="{StaticResource Primary}"
                               HorizontalOptions="End"
                               VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                    </VerticalStackLayout>

                    <Button Text="Bejelentkezés"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        CornerRadius="12"
                        HeightRequest="56"
                        Margin="0,10,0,0"
                        Clicked="LoginButton_Clicked">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}" Opacity="0.25" Radius="10" Offset="0,4"/>
                        </Button.Shadow>
                    </Button>


                </VerticalStackLayout>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="4" Margin="0,30,0,0">
                    <Label Text="Nincs még fiókod?" TextColor="#6B7280" FontSize="14"/>
                    <Label Text="Regisztrálj most" 
                       TextColor="{StaticResource Primary}" 
                       FontAttributes="Bold" 
                       FontSize="14"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>